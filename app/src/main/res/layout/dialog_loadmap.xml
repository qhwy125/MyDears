<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_marginTop="-80dp"
        android:layout_width="@dimen/x190"
        android:layout_height="@dimen/x190"
        android:background="@drawable/backshape_corner_white"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp" >
        <ImageView
            android:id="@+id/off_iv"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:src="@mipmap/xx"
            android:scaleType="centerCrop"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <cn.modificator.waterwave_progress.WaterWaveProgress
                android:id="@+id/waterWaveProgress1"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:maxProgress="100"
                app:progress="0"
                app:progressBgColor="#ec60c5ff"
                app:progressColor="#00a2ff"
                app:waterWaveBgColor="#da60c5ff"
                app:waterWaveColor="#00a2ff"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/ok_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="@dimen/x20"
                android:textColor="#00a2ff"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/ps_tv"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:text="？"/>
    </LinearLayout>
</LinearLayout>